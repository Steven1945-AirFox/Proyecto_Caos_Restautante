
@{
    ViewBag.Title = "GerenteComuniciacion";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <title>Panel de Comunicaciones - Gerente</title>
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #fff;
        }

        .navbar {
            display: flex;
            background-color: #f0fafa;
            padding: 10px;
            justify-content: space-around;
            border-bottom: 1px solid #ccc;
        }

            .navbar button {
                background: none;
                border: none;
                font-weight: bold;
                font-size: 14px;
                cursor: pointer;
                padding: 10px;
            }

                .navbar button.active {
                    border-bottom: 2px solid #ff4081;
                    color: #ff4081;
                }

        .summary {
            display: flex;
            justify-content: space-around;
            padding: 20px;
        }

        .summary-box {
            border: 1px solid #eee;
            border-radius: 10px;
            padding: 15px;
            width: 20%;
            text-align: center;
        }

            .summary-box.red {
                border-color: #ffcccc;
                color: #e60000;
            }

            .summary-box.orange {
                border-color: #ffddaa;
                color: #ff9900;
            }

            .summary-box.blue {
                border-color: #b3d9ff;
                color: #0077cc;
            }

            .summary-box.green {
                border-color: #cceedd;
                color: #00aa66;
            }

        .content-container {
            display: flex;
            padding: 20px;
            gap: 20px;
        }

        .communications-section {
            width: 50%;
            padding: 15px;
        }

            .communications-section h1 {
                color: #333;
                font-size: 24px;
                margin-bottom: 20px;
            }

        .communication-box {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 15px;
            background-color: #f9f9f9;
        }

            .communication-box h2 {
                font-size: 18px;
                margin-top: 0;
                color: #555;
            }

        .message-box {
            margin-top: 10px;
        }

            .message-box textarea {
                width: 100%;
                min-height: 100px;
                padding: 10px;
                border: 1px solid #D7CCC8;
                border-radius: 5px;
                resize: vertical;
                margin-bottom: 10px;
                font-family: 'Segoe UI', sans-serif;
            }

        .send-button {
            background-color: #ffe5b6; /* Color normal */
            color: #5D4037;
            border: 1px solid #e0b878;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            transition: all 0.3s;
            width: 100%;
        }

            .send-button:hover {
                background-color: #ffca6a; /* Color hover */
                border-color: #e0b05a;
            }

        .checklist {
            margin: 20px 0;
        }

        .checklist-item {
            display: flex;
            align-items: center;
            padding: 12px;
            margin-bottom: 10px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #f9f9f9;
        }

            .checklist-item input[type="checkbox"] {
                margin-right: 15px;
                transform: scale(1.3);
                cursor: pointer;
            }

            .checklist-item label {
                font-size: 15px;
                flex-grow: 1;
                cursor: pointer;
            }

        .action-button {
            background-color: #ffe5b6; /* Color normal */
            color: #5D4037;
            border: 1px solid #e0b878;
            padding: 12px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            font-size: 16px;
            width: 100%;
            transition: all 0.3s;
            margin-top: 10px;
        }

            .action-button:hover {
                background-color: #ffca6a; /* Color hover */
                border-color: #e0b05a;
            }

        .reports-section {
            width: 50%;
            padding: 15px;
        }

            .reports-section h1 {
                color: #333;
                font-size: 24px;
                margin-bottom: 20px;
            }

        .report-options {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
        }

        .report-button {
            background-color: #ffe5b6; /* Color normal */
            color: #5D4037;
            border: 1px solid #e0b878;
            padding: 15px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: bold;
            text-align: center;
            transition: all 0.3s;
        }

            .report-button:hover {
                background-color: #ffca6a; /* Color hover */
                border-color: #e0b05a;
            }
    </style>
</head>
<body>

    <!-- Navbar -->
    <div class="navbar">
        <button onclick="location.href='@Url.Action("GerenteCrisis", "Home")'">🌸 Crisis</button>
        <button onclick="location.href='@Url.Action("GerentePersonal", "Home")'">👥 Personal</button>
        <button onclick="location.href='@Url.Action("GerenteResenas", "Home")'">💬 Reseñas</button>
        <button onclick="location.href='@Url.Action("GerenteFinanciero", "Home")'">🔥 Financiero</button>
        <button class="active" onclick="location.href='@Url.Action("GerenteComunicacion", "Home")'">📅 Comunicaciones</button>
    </div>

    <!-- Resumen -->
    <div class="summary">
        <div class="summary-box red">
            <div>❗ Quejas Activas</div>
            <h2>0</h2>
        </div>
        <div class="summary-box orange">
            <div>💰 Ingresos Totales</div>
            <h2>₡0</h2>
        </div>
        <div class="summary-box blue">
            <div>👤 Personal Activo</div>
            <h2>0</h2>
        </div>
        <div class="summary-box green">
            <div>🛡️ Protocolos Activos</div>
            <h2>0</h2>
        </div>
    </div>

    <!-- Contenido principal dividido en dos columnas -->
    <div class="content-container">
        <!-- Columna izquierda - Comunicaciones de Crisis -->
        <div class="communications-section">
            <h1>Comunicaciones de Crisis</h1>

            <!-- Cuadro de Anuncio General -->
            <div class="communication-box">
                <h2>Anuncio General a Clientes</h2>
                <div class="message-box">
                    <textarea placeholder="Escribe tu anuncio para los clientes..."></textarea>
                    <button class="send-button">ENVIAR ANUNCIO</button>
                </div>
            </div>

            <!-- Cuadro de Mensaje al Personal -->
            <div class="communication-box">
                <h2>Mensaje a Todo el Personal</h2>
                <div class="message-box">
                    <textarea placeholder="Escribe tu mensaje para el personal..."></textarea>
                    <button class="send-button">ENVIAR MENSAJE</button>
                </div>
            </div>

            <!-- Checklist para otras comunicaciones -->
            <div class="checklist">
                <div class="checklist-item">
                    <input type="checkbox" id="com3" checked>
                    <label for="com3">Llamar a Gerencia Regional</label>
                </div>

                <div class="checklist-item">
                    <input type="checkbox" id="com4">
                    <label for="com4">Contactar Oficina Central</label>
                </div>

                <div class="checklist-item">
                    <input type="checkbox" id="com5" checked>
                    <label for="com5">Activar Protocolo de Emergencia Corporativo</label>
                </div>
            </div>

            <button class="action-button">ACTIVAR PROTOCOLOS SELECCIONADOS</button>
        </div>

        <!-- Columna derecha - Reportes y Documentación -->
        <div class="reports-section">
            <h1>Reportes y Documentación</h1>

            <div class="report-options">
                <button class="report-button">Generar Reporte de Incidentes</button>
                <button class="report-button">Análisis de Impacto</button>
                <button class="report-button">Documentar Acciones Tomadas</button>
                <button class="report-button">Proyección de Recuperación</button>
                <button class="report-button">Plan de Mejora Post-Crisis</button>
                <button class="report-button">Resumen Ejecutivo</button>
            </div>
        </div>
    </div>

</body>
</html>
