    <script>
    // Variables para simulación con persistencia
let nivelEstres, nivelEnergia, eficiencia, tiempoTranscurrido, ultimaActualizacion;
let tiempoInterval;
let propinasInterval;

// Función para cargar datos desde localStorage
function cargarDatosGuardados() {
    const datosGuardados = localStorage.getItem('simulacionDatos');
    if (datosGuardados) {
        const datos = JSON.parse(datosGuardados);
        nivelEstres = datos.nivelEstres || @Model.NivelEstres;
        nivelEnergia = datos.nivelEnergia || @Model.NivelEnergia;
        eficiencia = datos.eficiencia || @Model.Eficiencia;
        tiempoTranscurrido = datos.tiempoTranscurrido || 0;
        ultimaActualizacion = new Date(datos.ultimaActualizacion || Date.now());

        // Calcular tiempo offline y actualizar valores
        const ahora = new Date();
        const minutosOffline = Math.floor((ahora - ultimaActualizacion) / (1000 * 60));

        if (minutosOffline > 0) {
            // Actualizar valores basado en tiempo offline
            nivelEstres = Math.min(100, nivelEstres + (minutosOffline * 1));
            nivelEnergia = Math.max(0, nivelEnergia - (minutosOffline * 1));
            eficiencia = Math.max(0, eficiencia - (minutosOffline * 2));
            tiempoTranscurrido += (minutosOffline * 60); // Convertir a segundos
        }

        ultimaActualizacion = ahora;
    } else {
        // Valores iniciales del modelo
        nivelEstres = @Model.NivelEstres;
        nivelEnergia = @Model.NivelEnergia;
        eficiencia = @Model.Eficiencia;
        tiempoTranscurrido = 0;
        ultimaActualizacion = new Date();
    }
}

        // Función para guardar datos en localStorage
        function guardarDatos() {
            const datos = {
                nivelEstres: nivelEstres,
                nivelEnergia: nivelEnergia,
                eficiencia: eficiencia,
                tiempoTranscurrido: tiempoTranscurrido,
                ultimaActualizacion: ultimaActualizacion.toISOString()
            };
            localStorage.setItem('simulacionDatos', JSON.stringify(datos));
        }

        // Formato HH:MM:SS
        function formatearTiempo(segundos) {
            const horas = Math.floor(segundos / 3600);
            const minutos = Math.floor((segundos % 3600) / 60);
            const segs = segundos % 60;
            return `${horas.toString().padStart(2, '0')}:${minutos.toString().padStart(2, '0')}:${segs.toString().padStart(2, '0')}`;
        }

        // Indicadores simulados
        function actualizarIndicadoresSimulados() {
            tiempoTranscurrido += 1; // Incrementar el contador de tiempo

            const ahora = new Date();
            const segundosTranscurridos = Math.floor((ahora - ultimaActualizacion) / 1000);

            if (segundosTranscurridos >= 60) {
                const minutosTranscurridos = Math.floor(segundosTranscurridos / 60);
                nivelEstres = Math.min(100, nivelEstres + (minutosTranscurridos * 1));
                nivelEnergia = Math.max(0, nivelEnergia - (minutosTranscurridos * 1));
                eficiencia = Math.max(0, eficiencia - (minutosTranscurridos * 2));
                ultimaActualizacion = ahora;

                // Guardar cambios
                guardarDatos();
            }

            actualizarUIIndicadores();
        }

        // Actualiza barras e indicadores
        function actualizarUIIndicadores() {
            document.querySelector('.stress .status-fill').style.width = `${nivelEstres}%`;
            document.querySelector('.stress .status-value').textContent = `${nivelEstres.toFixed(0)}%`;

            document.querySelector('.energy .status-fill').style.width = `${nivelEnergia}%`;
            document.querySelector('.energy .status-value').textContent = `${nivelEnergia.toFixed(0)}%`;

            document.querySelector('.efficiency .status-fill').style.width = `${eficiencia}%`;
            document.querySelector('.efficiency .status-value').textContent = `${eficiencia.toFixed(0)}%`;

            const tiempoElement = document.querySelector('.time-worked .status-value');
            if (tiempoElement) {
                tiempoElement.textContent = formatearTiempo(tiempoTranscurrido);
            }
        }






        // Propinas simuladas - Versión mejorada
        async function actualizarPropinas() {
            try {
                const response = await fetch('/Hame/ObtenerPropinasHoy?_=' + Date.now());
                if (!response.ok) throw new Error('Error en la respuesta del servidor');

                const data = await response.json();
                if (data.success) {
                    const propinasValue = document.querySelector('.tips .status-value');
                    if (propinasValue) {
                        propinasValue.textContent = `₡${data.propinasTurno.toFixed(2)}`;
                    }
                }
            } catch (error) {
                console.error("Error al actualizar propinas:", error);
            }
        }




    // Función para resetear datos (opcional)
    function resetearSimulacion() {
        localStorage.removeItem('simulacionDatos');
        nivelEstres = @Model.NivelEstres;
        nivelEnergia = @Model.NivelEnergia;
        eficiencia = @Model.Eficiencia;
        tiempoTranscurrido = 0;
        ultimaActualizacion = new Date();
        actualizarUIIndicadores();
    }

        // Inicializar al cargar la página
        document.addEventListener('DOMContentLoaded', function () {
            cargarDatosGuardados();
            actualizarUIIndicadores();

            // Iniciar intervalos
            tiempoInterval = setInterval(actualizarIndicadoresSimulados, 1000); // Actualizar cada segundo
            propinasInterval = setInterval(actualizarPropinas, 15000); // Actualizar propinas cada 15 segundos

            // Configurar otros eventos y funciones
            configurarFiltros();
            actualizarPropinas();
            actualizarEstadoMesas();

            // Guardar datos cada minuto
            setInterval(guardarDatos, 60000);

            // Configurar eventos de botones
            const botonesDetalles = document.querySelectorAll('.btn-detalles');
            botonesDetalles.forEach(boton => {
                boton.addEventListener('click', function () {
                    const mesaId = this.getAttribute('data-mesaid');
                    toggleDetallesAdicionales(mesaId, this);
                });
            });
        });

        // Limpiar intervalos al salir de la página
        window.addEventListener('beforeunload', function () {
            clearInterval(tiempoInterval);
            clearInterval(propinasInterval);
            guardarDatos();
        });



        // En el DOMContentLoaded o donde configures los eventos
        document.querySelectorAll('.btn-detalles').forEach(boton => {
            boton.addEventListener('click', function () {
                const mesaId = this.closest('.mesa-card').getAttribute('data-mesaid');
                if (!mesaId) {
                    console.error('No se encontró el ID de la mesa');
                    return;
                }
                toggleDetallesAdicionales(mesaId, this);
            });
        });











        // Array de 20 consejos
        const consejos = [
