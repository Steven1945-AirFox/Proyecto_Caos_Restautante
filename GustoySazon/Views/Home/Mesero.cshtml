        // Alternar detalles de pedido al hacer clic
        function toggleDetallesAdicionales(mesaId, botonClickeado) {
            const mesaCard = botonClickeado.closest('.mesa-card');
            let detallesExistentes = mesaCard.querySelector('.detalles-adicionales');

            if (detallesExistentes) {
                const visible = detallesExistentes.style.display !== 'none';
                detallesExistentes.style.display = visible ? 'none' : 'block';
                botonClickeado.textContent = visible ? 'Ver Pedido' : 'Ocultar Detalles';
                botonClickeado.classList.toggle('btn-warning', !visible);
                botonClickeado.classList.toggle('btn-info', visible);
                return;
            }

            // Evita agregar múltiples detalles si ya hay una carga en progreso
            if (mesaCard.dataset.cargando === "true") return;

            mesaCard.dataset.cargando = "true"; // Marcar como cargando

            botonClickeado.textContent = 'Ocultar Detalles';
            botonClickeado.classList.remove('btn-info');
            botonClickeado.classList.add('btn-warning');

            cargarDatosAdicionalesDesdeApi(mesaId, mesaCard, botonClickeado);
        }

        function cargarDatosAdicionalesDesdeApi(mesaId, mesaCard, botonClickeado) {
            const detallesContainer = mesaCard.querySelector('.detalles-contenedor');

            fetch(`/Hame/ObtenerOrdenesPorMesa?mesaId=${mesaId}`)
                .then(response => response.json())
                .then(data => {
                    mesaCard.dataset.cargando = "false"; // Quitar marca de carga

                    if (!data.success || !data.data || data.data.length === 0) {
                        detallesContainer.insertAdjacentHTML('beforeend', `
                    <div class="detalles-adicionales" style="margin-top: 10px;">
                        <em>Sin pedidos aún.</em>
                    </div>
                `);
                        return;
                    }

                    let tablaHTML = `
                <div class="detalles-adicionales" style="margin-top: 10px;">
                    <table class="pedido-detalle-table">
                        <thead>
                            <tr>
                               <th style="border: 1px solid #ccc; padding: 5px;">Platillo</th>
                                <th style="border: 1px solid #ccc; padding: 5px;">Cantidad</th>
                                <th style="border: 1px solid #ccc; padding: 5px;">Precio Unitario</th>
                                <th style="border: 1px solid #ccc; padding: 5px;">Precio Total</th>
                                <th style="border: 1px solid #ccc; padding: 5px;">Estado</th>
                                <th style="border: 1px solid #ccc; padding: 5px;">Fecha</th>
                                <th style="border: 1px solid #ccc; padding: 5px;">Mesero ID</th>
                        </thead>
                        <tbody>
            `;

                    data.data.forEach(p => {
                        const fecha = new Date(p.Fecha).toLocaleString();
                        tablaHTML += `
                    <tr>
                        <td style="border: 1px solid #ccc; padding: 5px;">${p.NombreComida}</td>
                        <td style="border: 1px solid #ccc; padding: 5px; text-align:center;">${p.Cantidad}</td>
                        <td style="border: 1px solid #ccc; padding: 5px; text-align:right;">$${parseFloat(p.PrecioUnitario).toFixed(2)}</td>
                        <td style="border: 1px solid #ccc; padding: 5px; text-align:right;">$${parseFloat(p.PrecioTotal).toFixed(2)}</td>
                        <td style="border: 1px solid #ccc; padding: 5px;">${p.Estado}</td>
                        <td style="border: 1px solid #ccc; padding: 5px;">${fecha}</td>
                        <td style="border: 1px solid #ccc; padding: 5px; text-align:center;">${p.MeseroId ?? 'N/D'}</td>
                    </tr>
                `;
                    });

                    tablaHTML += `
                        </tbody>
                    </table>
                </div>
            `;

                    detallesContainer.insertAdjacentHTML('beforeend', tablaHTML);
                })
                .catch(error => {
                    console.error("Error al cargar las órdenes:", error);
                    mesaCard.dataset.cargando = "false";
                    detallesContainer.insertAdjacentHTML('beforeend', `
                <div class="detalles-adicionales" style="margin-top: 10px; color: red;">
                    Error al cargar los pedidos.
                </div>
            `);
                });
        }


